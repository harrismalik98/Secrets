<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered People Secrets!</h1>

    <% usersWithSecrets.forEach(function(usersWithSecret){ %>

      <% for( let i = 0; i < usersWithSecret.secrets.length; i++ ) { %>
      <p class="secret-text"> <%= usersWithSecret.secrets[i].secret %> </p>
      <% } %>

    <% }); %>

    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
